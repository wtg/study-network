<div class="container">
  <div class="row">
    <div class="col-sm-14">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @course.abrev_name + " - " + @course.title %></h3>
          <h5><%= "Level: " + @course.level %> | 
              <%= "Section: " + @course.section %> |
              <%= "CRN: " + @course.crn %></h5>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-9">
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-body">
            <h3 class="panel-title">Message Board</h3><hr />
            <div style="float: right">
              <%= link_to "+ New Post", new_course_post_path(@course), class: "btn btn-primary btn-xs" %>
            </div>
            <br /> <br />
            <%= paginate @posts %>
            <% if !@posts.empty? %>
              <% @posts.each do |post| %>
                <%= render partial: "posts/post_tile", locals: { post: post, course_id: params[:id], post_id: post.id } %>
              <% end %>
            <% end %>
            <%= paginate @posts %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="panel panel-default">
        <div class="panel-body">
          <h3 class="panel-title">Connections</h3><hr />
          <% if @users.length > 0 %>
            <div class="list-group">
            <% @users.each do |user| %>
              <% if user.id != get_signedin_id %>
                <%= link_to user.real_name, user, class: 'list-group-item'  %>
              <% end %>
            <% end %>
            </ul>
          <% else %>
            <p>No Connections Found :( </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
