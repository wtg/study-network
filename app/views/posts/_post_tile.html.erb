<div class="panel panel-danger">
  <div class="panel-heading">
    <b><%= link_to post.title.capitalize , course_post_path(course_id: course_id, post_id: post_id, id: post_id) %> by <%= User.find(post.user_id).real_name %> </b>
    <span class="badge">
      <% replies = Reply.post_replies(post_id).length %>
      <%= link_to pluralize(replies.to_i, 'Reply'), 
                  course_post_path(course_id: course_id, post_id: post_id, id: post_id), :class => "badge-link" %> 
    </span>
    <div class="pull-right"><%= post.created_at.to_date %></div>
  </div>
  <div class="panel-body">
    <%= post.body %>
  </div>
</div>