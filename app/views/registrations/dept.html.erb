<%= form_for :new_course_registrations, url: user_registrations_path do |f| %>
<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1> <%= @department %> Classes </h1><br />
      <%= f.submit "Save", :class => "btn btn-primary btn-xs" %><br />
    </div>
    <div class="panel-body">
      <% @courses.each_slice(2) do |courses| %>
        <div class="row">
          <% courses.each do |course| %>
            <div class="col-md-6">
                <%= f.check_box :registrations, {multiple: true}, course.crn, nil %> 
                <%= course.title %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>
