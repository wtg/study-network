<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"> Editing <%= @user.username %> </h3>
    <br />
    <%= link_to '<< Back to profile', user_path(@user), :class => 'btn btn-xs' %>
  </div>
  <div class="panel-body">
  <%= form_for :user, url: user_path(@user), method: :patch do |f| %>
    <br>
    <p>
      <%= f.label :name %>
      <%= f.text_field :real_name, value: @user.real_name %>
    </p>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email, value: @user.email %>
    </p>
    <p> 
      <%= f.label :year %>
      <%= f.select :year, User::YEARS, value: @user.year %>
    </p>
    <p>
      <%= f.submit :class => "btn btn-primary btn-xs" %>
    </p>
  </div>
  <% end %>

  <hr />
  <% @registrations.each do |r| %>
    <p>  </p>
  <% end %>

  <hr />
  <%= link_to "Discontinue Account", user_path(@user), method: :delete, data: { confirm: 'Are you sure?'}, :class => 'discontinue-btn' %>
</div>


